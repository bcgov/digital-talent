// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Classification {
  id                String    @id @db.Uuid
  name              String?
  description       String?
  code              String?
  grid              String?
  salary_range      Decimal[]
  salary_adjustment Decimal?
  created_at        DateTime
  updated_at        DateTime?

  @@map("classification")
}

// Geography
model Country {
  id         String    @id @db.Uuid
  deltek_id  String?
  name       String?
  code       String?
  created_at DateTime
  updated_at DateTime?

  provinces Province[]

  @@map("country")
}

model Province {
  id         String    @id @db.Uuid
  country_id String?   @db.Uuid
  deltek_id  String?
  name       String?
  code       String?
  created_at DateTime
  updated_at DateTime?

  regions Region[]
  country Country? @relation(fields: [country_id], references: [id])

  @@map("province")
}

model Region {
  id          String    @id @db.Uuid
  province_id String?   @db.Uuid
  name        String?
  created_at  DateTime
  updated_at  DateTime?

  cities   City[]
  province Province? @relation(fields: [province_id], references: [id])

  @@map("region")
}

model City {
  id          String    @id @db.Uuid
  region_id   String?   @db.Uuid
  deltek_id   String?
  name        String?
  postal_code String?
  lat         Float?
  lon         Float?
  created_at  DateTime
  updated_at  DateTime?

  region Region? @relation(fields: [region_id], references: [id])

  @@map("city")
}

model Ministry {
  id         String    @id @db.Uuid
  deltek_id  String?
  name       String?
  created_at DateTime
  updated_at DateTime?

  @@map("ministry")
}

model User {
  id         String    @id @db.Uuid
  name       String?
  email      String?
  roles      String[]
  created_at DateTime
  updated_at DateTime?

  @@map("user")
}
