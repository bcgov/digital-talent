// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Classification {
  id                String    @id @db.Uuid
  name              String?
  description       String?
  code              String?
  grid              String?
  salary_range      Decimal[]
  salary_adjustment Decimal?
  created_at        DateTime
  updated_at        DateTime?

  @@map("classification")
}

// Geography
model Country {
  id         String    @id @db.Uuid
  deltek_id  String?
  name       String?
  code       String?
  created_at DateTime
  updated_at DateTime?

  provinces Province[]

  @@map("country")
}

model Province {
  id         String    @id @db.Uuid
  country_id String?   @db.Uuid
  deltek_id  String?
  name       String?
  code       String?
  created_at DateTime
  updated_at DateTime?

  country Country? @relation(fields: [country_id], references: [id])

  @@map("province")
}

model Ministry {
  id         String    @id @db.Uuid
  deltek_id  String?
  name       String?
  created_at DateTime
  updated_at DateTime?

  @@map("ministry")
}

model User {
  id         String    @id @db.Uuid
  name       String?
  email      String?
  roles      String[]
  created_at DateTime
  updated_at DateTime?

  @@map("user")
}
