// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Classification {
  id                String    @id @db.Uuid
  name              String
  description       String?
  code              String
  grid              String
  salary_range      Decimal[]
  salary_adjustment Decimal?
  created_at        DateTime
  updated_at        DateTime?

  @@map("classification")
}

model User {
  id         String    @id @db.Uuid
  name       String?
  email      String?
  roles      String[]
  created_at DateTime
  updated_at DateTime?

  @@map("user")
}

model Ministry {
  id         String    @id @db.Uuid
  deltek_id  String?
  name       String?
  created_at DateTime
  updated_at DateTime?

  @@map("ministry")
}
